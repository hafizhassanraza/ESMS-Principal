<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/light_gray">

    <LinearLayout
        android:id="@+id/textdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Annoucement"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/announcementvalues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textdetail"
        android:layout_marginTop="@dimen/_5ssp">

        <TextView
            android:id="@+id/titleannouncement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Annoucement" />

        <TextView
            android:id="@+id/dateannouncement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/statusofannouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/announcementvalues"
        android:layout_marginTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/announcementStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved" />
        </LinearLayout>

        <Button
            android:id="@+id/approveAnnouncement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Approve"
            android:textSize="@dimen/_9sdp" />

    </LinearLayout>


</RelativeLayout>